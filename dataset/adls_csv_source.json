{
	"name": "adls_csv_source",
	"properties": {
		"linkedServiceName": {
			"referenceName": "AzureDataLakeStorage",
			"type": "LinkedServiceReference"
		},
		"parameters": {
			"foldername": {
				"type": "string"
			}
		},
		"annotations": [],
		"type": "DelimitedText",
		"typeProperties": {
			"location": {
				"type": "AzureBlobFSLocation",
				"folderPath": {
					"value": "@dataset().foldername",
					"type": "Expression"
				},
				"fileSystem": "2023"
			},
			"columnDelimiter": ",",
			"escapeChar": "\\",
			"firstRowAsHeader": true,
			"quoteChar": "\""
		},
		"schema": [
			{
				"name": "country",
				"type": "String"
			},
			{
				"name": "city",
				"type": "String"
			},
			{
				"name": "population",
				"type": "String"
			}
		]
	}
}